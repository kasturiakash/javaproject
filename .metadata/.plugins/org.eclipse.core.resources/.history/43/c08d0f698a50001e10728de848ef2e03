
public class Stars {

	public static void main(String[] args) 
	{
        
        // 1st loop
        for (int a = 0; a < 10; a++) {
 
            // nested 2nd loop
            for (int b = 2 * (10 - a); b >= 0; b--) {
                // printing spaces
                System.out.print(" ");
            }
 
            // nested 3rd loop
            for (int b = 0; b <= a; b++) {
                // printing stars
                System.out.print("* ");
            }
 
            // end-line
            System.out.println();
        }

	}

}
