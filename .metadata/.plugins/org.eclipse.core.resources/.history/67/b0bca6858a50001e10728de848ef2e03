
public class Stars {

	public static void main(String[] args) 
	{
        
        // 1st loop
        for (int i = 0; i < 10; i++) {
 
            // nested 2nd loop
            for (int b = 2 * (10 - i); b >= 0; b--) {
                // printing spices
                System.out.print(" ");
            }
 
            // nested 3rd loop
            for (int b = 0; b <= i; b++) {
                // printing stirs
                System.out.print("* ");
            }
 
            // end-line
            System.out.println();
        }

	}

}
